<div class="page-header">
  <h1>
    <%= current_user.first_name %>'s bikes
    <!-- <a href="/bikes/new" class="btn btn-lg btn-success">New Bike</a> -->
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <!-- <th>User</th> -->
        <th>Year</th>
        <th>Model</th>
        <th>Manufacturer</th>
        <th>Actions</th>
      </tr>

      <% current_user.bikes.each do |bike| %>
      <tr>
        <!-- <td><%= bike.user_id %></td> -->
        <td><%= bike.year %></td>
        <td><%= bike.model %></td>
        <td><%= bike.manufacturer %></td>
        <td>
          <a href="/bikes/<%= bike.id %>" class="btn btn-primary">Show</a>
          <a href="/bikes/<%= bike.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bike/<%= bike.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<!-- Validation failure messages -->
<% if @bike.errors.any? %>
  <% @bike.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Bike</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_bike" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->

      <!-- <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>




        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @bike.user_id %>">
      </div> -->

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Year" class="form-control" value="<%= @bike.year %>">
      </div>

      <!-- Label and input for model -->
      <div class="form-group">
        <label for="model" class="control-label">
          Model
        </label>

        <input type="text" id="model" name="model" placeholder="Model" class="form-control" value="<%= @bike.model %>">
      </div>

      <!-- Label and input for manufacturer -->
      <div class="form-group">
        <label for="manufacturer" class="control-label">
          Manufacturer
        </label>

        <input type="text" id="manufacturer" name="manufacturer" placeholder="Manufacturer" class="form-control" value="<%= @bike.manufacturer %>">
      </div>

      <button class="btn btn-success">
        Create Bike
      </button>
      or
      <a href="/bikes">Cancel</a>
    </form>
  </div>
</div>

