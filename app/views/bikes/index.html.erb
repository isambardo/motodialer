<div class="page-header">
  <h1>
    Bikes
    <a href="/bikes/new" class="btn btn-lg btn-success">New Bike</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Year</th>
        <th>Model</th>
        <th>Manufacturer</th>
        <th>Actions</th>
      </tr>

      <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.user_id %></td>
        <td><%= bike.year %></td>
        <td><%= bike.model %></td>
        <td><%= bike.manufacturer %></td>
        <td>
          <a href="/bikes/<%= bike.id %>" class="btn btn-primary">Show</a>
          <a href="/bikes/<%= bike.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bike/<%= bike.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
