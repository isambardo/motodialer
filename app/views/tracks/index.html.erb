<div class="page-header">
  <h1>
    Tracks
    <a href="/tracks/new" class="btn btn-lg btn-success">New Track</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Address</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @tracks.each do |track| %>
      <tr>
        <td><%= track.address %></td>
        <td><%= track.name %></td>
        <td>
          <a href="/tracks/<%= track.id %>" class="btn btn-primary">Show</a>
          <a href="/tracks/<%= track.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_track/<%= track.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
